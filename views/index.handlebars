{{!------  Title/Header ------}}
<div class="row">
  <h1 class="title"> Eat-Da-Burger</h1>
  <div id='main-img'><img src="/assets/images/truck300.png" alt="burger truck with a happy burger on the top"></div>
</div>

{{!------  Submit Own Burger Form ------}}
.<div class="row form-wrapper">
  <form class="order-form">
    <label for="new-burger">Enter your own favourite burger and click "ORDER NOW" button.</label>
    <textarea placeholder="My favourite burger ..." id="new-burger" class="u-full-width"></textarea>
    <button class="order-btn" type="submit">Order Now</button>
  </form>
</div>

<div class="row">
  {{!------  List of burgers to devour ------}}
  <div class="six columns list">
    <div>
      <h4> Burgers to devour
        <i class="fa fa-cutlery utensil" aria-hidden="true"></i>
      </h4>
    </div>
    {{!-- Dynamically generated list --}}
    <div>
      <ul class="list to-devour">
        {{#each burgers}}
          {{#unless devoured}}
        <li class="list-item">
          {{id}}. {{burger_name}}
          <button type="submit" class="u-pull-right devour-btn" data-id="{{id}}" data-devoured={{devoured}}><img
              src="/assets/images/2.png" alt="{{burger_name}}">
          </button>
          </li>
            {{/unless}}
          {{/each}}
      </ul>
    </div>
  </div>
  {{!------  Burgers devoured ------}}
  <div class="six columns list">
    <h4> Burgers devoured
      <i class="fa fa-smile-o smile" aria-hidden="true"></i>
    </h4>
    {{!-- Dynamically generated list --}}
    <ul class="list devoured">
        {{#each burgers}}
        {{#if devoured}}
        <li class="list-item">
          {{id}}. {{burger_name}}
        </li>
        {{/if}}
        {{/each}}
    </ul>
  </div>
</div>



